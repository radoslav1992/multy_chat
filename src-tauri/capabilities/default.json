{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc/schema.json",
  "identifier": "default",
  "description": "Default capabilities for the app",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "store:default",
    "http:default",
    "dialog:default",
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://api.anthropic.com/*" },
        { "url": "https://api.openai.com/*" },
        { "url": "https://generativelanguage.googleapis.com/*" },
        { "url": "https://api.deepseek.com/*" }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "$APPDATA/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$DESKTOP/**" }
      ]
    }
  ]
}
